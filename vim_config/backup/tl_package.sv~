package tl_package;
   // the internal state of the traffic light controller
   typedef enum {
       ST_INVALID, 
       ST_RED, 
       ST_YELLOW, 
       ST_GREEN, 
       ST_EMERGENCY
   } tl_state_e;

   // the color of the traffic light
   typedef enum {
       TL_RED,
       TL_YELLOW,
       TL_GREEN
   } tl_color_e;

endpackage // tl_package
   
