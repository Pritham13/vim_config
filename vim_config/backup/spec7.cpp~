/**
 * Minmax combinational design.
 *
 * Computes, in zero cycles, the min and max of four eight bit unsigned values.
 */
extern void spec7(bool rst, uint8_t x0_in, uint8_t x1_in, uint8_t x2_in, uint8_t x3_in, uint8_t xmin_out, uint8_t xmax_out);


    uint8_t x01_min, x23_min;
    uint8_t x01_max, x23_max;

    if (rst) {
        xmin_out=0;
        xmax_out=0;
    } else {
        // Min Calculation
        if (x0_in < x1_in) {
            x01_min = x0_in;
        } else {
            x01_min = x1_in;
        }
        if (x2_in < x3_in) {
            x23_min = x2_in;
        } else {
            x23_min = x3_in;
        }
        if (x01_min < x23_min) {
            xmin_out=x01_min;
        } else {
            xmin_out=x23_min;
        }

        // Max Calculation
        if (x0_in > x1_in) {
            x01_max = x0_in;
        } else {
            x01_max = x1_in;
        }
        if (x2_in > x3_in) {
            x23_max = x2_in;
        } else {
            x23_max = x3_in;
        }
        if (x01_max > x23_max) {
            xmax_out=x01_max;
        } else {
            xmax_out=x23_max;
        }

    }
}

